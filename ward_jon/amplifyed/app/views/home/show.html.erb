  <div class="col-md-9">
    <%= image_tag(@home.picture_url, width: '100%') if @home.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @home.name %></p>
    <p><b>Description: </b><%= @home.description %></p>
